<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:Overseer.Desktop.ViewModels;assembly=Overseer.Desktop"
    Title="Overseer.Desktop"
    Icon="resm:Overseer.Desktop.Assets.avalonia-logo.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>
        <ContentControl Grid.Column="0" Content="{Binding ViewMenuViewModel}" />
        <ContentControl Grid.Column="1" Content="{Binding ActiveObject}" />
    </Grid>
</Window>